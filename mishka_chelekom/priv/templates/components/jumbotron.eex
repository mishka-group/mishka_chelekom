  <% end %>
  defp padding_size(params) when is_binary(params), do: params
  <%= if is_nil(@padding) or "none" in @padding do %>
  defp padding_size(_), do: padding_size("none")
  <% end %>

  <%= if is_nil(@space) or "extra_small" in @space do %>
